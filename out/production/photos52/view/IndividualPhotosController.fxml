<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="model.PhotoController" prefHeight="400.0" prefWidth="600.0">
    <GridPane fx:id="album_grid" prefWidth="200" prefHeight="200" visible="false">
        <rowConstraints>
            <RowConstraints prefHeight="100"/>
            <RowConstraints prefHeight="33"/>
            <RowConstraints prefHeight="34"/>
            <RowConstraints prefHeight="33"/>
        </rowConstraints>
        <ImageView fx:id ="image" fitHeight="100" GridPane.rowIndex="0" preserveRatio="true"/>
        <Label text="Name of Photo" GridPane.rowIndex="1" alignment="TOP_CENTER" contentDisplay="CENTER"/>
        <Label text="Hello" GridPane.rowIndex="2" alignment="TOP_CENTER" contentDisplay="CENTER"/>
        <Label text="Date" GridPane.rowIndex="3" alignment="TOP_CENTER" contentDisplay="CENTER"/>
    </GridPane>
</AnchorPane>
